<!-- including header and footer files of partials -->
<% include ./partials/header.ejs %>
<!-- including tailwind css -->
<div class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1627398362552-6a029c1f583c?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
<div class="w-[25vw]  bg-white px-4 py-5 rounded-[30px]">
  <h1 class="text-3xl tracking-tighter cap text-center font-semibold text-zinc-700 leading-none mb-3">Welcome to Pinterest</h1>

  <% if(error.length>0){ %>
    <p class="text-red-500"><%= error %></p>
 <% } %>

  
  <form action="/login" method="post">
    <label for="username" class="ml-1">Username:</label>
    <input class="border-2 rounded-md block w-full px-3 py-2" type="text" name="username" placeholder="username">
    <label for="password" class="ml-1">Password:</label>
    <input class="border-2 rounded-md block w-full px-3 py-2" type="password" name="password" placeholder="password">
    <a href="#" class="mt-1 ml-1 text-zinc-500 inline-block font-semibold">Forgot Password?</a>
    <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Login">
    <p class="text-xs font-semibold text-zinc-700 text-center mt-1">
      By continuing, you agree to Pinterest's Terms of Service.
    </p>
  </form>
  <a href="/register"class="inline-block mt-5 text-sm font-semibold text-zinc-700  text-center w-full">Don't have an account?</a>
</div>
</div>
<% include ./partials/footer.ejs %>