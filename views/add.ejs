<% include ./partials/header.ejs %>

<div class="w-full text-white min-h-screen px-10 py-5 bg-zinc-800">
    <h1 class="text-xl">Create a New Post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 " type="file" name="postimage">
        <input class="text-black block w-1/3 px-3 py-2 mt-2 border-2 rounded-md " type="text" placeholder="Title" name="title">
        <textarea class="text-black block h-20 w-1/3 px-3 py-2 mt-2 border-2 rounded-md " type="text" placeholder="Description" name="'description"></textarea>
        <input class="block w-1/3 bg-red-700 px-3 py-2 mt-2 rounded-md " type="submit" value="Create Post">
    </form>
</div>

