<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1455849318743-b2233052fcff?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
    <div class="w-[25vw]  bg-white px-4 py-5 rounded-[30px]">
      <h1 class="text-3xl tracking-tighter cap text-center font-semibold text-zinc-700 leading-none mb-3">Create New Account</h1>
      <form action="/register" method="post">
        <label for="username" class="ml-1">Username:</label>
        <input class="border-2 rounded-md block w-full px-3 py-2" type="text" name="username" placeholder="username">
        <label for="name" class="ml-1">Name:</label>
        <input class="border-2 rounded-md block w-full px-3 py-2" type="text" name="name" placeholder="name">
        <label for="password" class="ml-1">Password:</label>
        <input class="border-2 rounded-md block w-full px-3 py-2" type="password" name="password" placeholder="password">
        <label for="email" class="ml-1">Email:</label>
        <input class="border-2 rounded-md block w-full px-3 py-2" type="email" name="email" placeholder="email">
        <label for="contact" class="ml-1">Contact:</label>
        <input class="border-2 rounded-md block w-full px-3 py-2" type="number" name="Contact" placeholder="contact">
        <input class="border-2 rounded-full block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 text-center mt-1">
          By continuing, you agree to Pinterest's Terms of Service.
        </p>
      </form>
      <a href="/"class="inline-block mt-5 text-sm font-semibold text-zinc-700  text-center w-full">Login Existing Account?</a>
    </div>
    </div>
<% include ./partials/footer.ejs %>